                    "tags": [
                      "h2"
                    ]
                  },
                  "sources": [
                    {
                      "text": "I'm <em>dynamic creative</em> powered by TACTIC. My size is {size}."
                    }
                  ]
                },
                "MESSAGE_TEXT_BUTTON": {
                  "type": "TextLayer",
                  "params": {
                    "holder": "MESSAGE_TEXT",
                    "wrapper": "MESSAGE",
                    "tags": [
